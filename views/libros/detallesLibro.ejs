<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
<main>
    <h1><%= libro.titulo %></h1>
    <h2>ISBN: <%= libro.isbn %></h2>
    <ul>
        <li>G&eacute;nero: <%= libro.genero %></li>
        <li>Idioma: <%= libro.idioma %></li>
        <li>Sinopsis: <%= libro.sinopsis %></li>
        <% 
        const autores = [];
        for (let autor of libro.autors) {
            autores.push(autor.nombre + ' ' + autor.apellidos);
        } %>
        <li>Autor(es): <%= autores.join(', ') %></li>
        <li>Editorial: <%= libro.editorial.nombre %></li>
    </ul>
    <a href="/libros/editBook/<%= libro.isbn %>" class="btn">Edit</a>
    <form action="/libros/deleteBook" method='POST'>
        <button class="btn" type="submit">Delete</button>
        <input type="hidden" name="isbn" value="<%= libro.isbn %>">
    </form>
</main>
<%- include('../includes/footer.ejs') %>